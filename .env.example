# FafyCat Environment Configuration
# Copy this file to .env and customize for your setup

# Database Configuration
# For development/testing (default)
FAFYCAT_DB_URL=sqlite:///data/fafycat_dev.db

# For production with your real data
# FAFYCAT_DB_URL=sqlite:///data/fafycat_prod.db

# Alternative: Use absolute paths
# FAFYCAT_DB_URL=sqlite:////Users/yourname/Documents/fafycat_production.db

# Database debugging (set to true to see SQL queries)
FAFYCAT_DB_ECHO=false

# Model and data directories
FAFYCAT_DATA_DIR=data
FAFYCAT_MODEL_DIR=data/models
FAFYCAT_EXPORT_DIR=data/exports

# Environment identifier
FAFYCAT_ENV=development